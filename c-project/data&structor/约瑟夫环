#include <iostream>
#include <string.h>
#include <stdlib.h>
//约瑟夫环的实现
using namespace std;
void creat(int , int);
typedef struct node 
{
	int data;
	struct node* next;
}Node;


int main() {
    int n, m;
    cout << "请输入总人数为：" << endl;
    cin >> n ;
    cout << "报的数字为：" << endl;
    cin >> m;
    creat(n, m);//创建环
    return 0;
}

void creat(int n, int m) {
    int flag = 1;
    Node *head, *p, *r;
    head = (Node *)malloc(sizeof(Node));
    head->data = 1;
    head->next = NULL;
    r = head;

    for(int i = 2; i <= n; i++) {
        p = (Node*)malloc(sizeof(Node));
        p->data = i;
        p->next = NULL;
        r->next = p;
        r = p;
    }
    r->next = head;//创建循环链表
    //r = head;

    while(flag < n) {
        for (int i = 1; i < m; i++) {
            r = head;
            head = head->next;
        }
        cout << head->data << " ";
        Node *temp = head; //及时删除，防止出现内存泄漏问题
        r->next = head->next;
        head = head->next;
        free(temp);
        flag++;
    }
    cout << head->data << endl;
   
}
